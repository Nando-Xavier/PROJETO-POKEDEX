<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Cadastro</title>
  </head>
  <body id="body">
    <%- include("./partials/header.ejs") %>
    <main>
      <form nome="formulario" method="post" action="/cadastro">
        <legend>Cadastro</legend>
        <fieldset id="principal">
          <fieldset class="id">
            <label for="nome">Nome</label>
            <input type="text" name="nome" />
          </fieldset>

          <fieldset class="id">
            <label for="imagem">Imagem</label>
            <input type="url" name="imagem" />
          </fieldset>

          <fieldset class="id">
            <label for="tipo">Tipo</label>
            <input type="text" name="tipo" />
          </fieldset>

          <fieldset class="id">
            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" />
          </fieldset>

          <fieldset class="id">
            <label for="altura">Altura</label>
            <input type="text" name="altura" />
          </fieldset>

          <fieldset class="id">
            <label for="peso">Peso</label>
            <input type="text" name="peso" />
          </fieldset>

          <fieldset class="id">
            <label for="categoria">Categoria</label>
            <input type="text" name="categoriae" />
          </fieldset>

          <fieldset class="id">
            <label for="habilidade">Habilidade</label>
            <input type="text" name="habilidade" />
          </fieldset>
        </fieldset>
        <button onclick="alerta()" type="submit">Enviar</button>
        <script>
          function alerta() {
            swal({
              title: "Olá!",
              text: "Pokemon cadastrado com sucesso.",
              icon: "success",
            });
          }
        </script>
      </form>
    </main>
    <%- include("./partials/footer.ejs") %>
  </body>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</html>
